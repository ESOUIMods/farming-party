    </TopLevelControl>

    <!-- Full-size Data Row (virtual) -->
    <Control name="FarmingPartyDataRow" horizontalAlignment="LEFT" verticalAlignment="CENTER" color="CFDCBD" virtual="true">
      <Dimensions x="870" y="36" />
      <Anchor point="TOPLEFT" offsetX="25" offsetY="25" />
      <Controls>
        <Texture name="$(parent)BG" inherits="ZO_ThinListBgStrip" />
        <Label name="$(parent)RowId" width="30" height="20" inheritAlpha="true" color="FFFFFF" verticalAlignment="TOP" horizontalAlignment="RIGHT" text="1">
          <Anchor point="TOPLEFT" offsetX="0" offsetY="-5" />
        </Label>        
        <Label name="$(parent)Farmer" font="ZoFontGame" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="LEFT" text="Farmer">
          <Anchor point="TOPLEFT" offsetX="5" offsetY="5" />
          <Dimensions x="54" y="26" />
        </Label>
