<GuiXml>
  <Controls>
    
    <TopLevelControl movable="true" mouseEnabled="true" name="FarmingPartyMemberItemsWindow" hidden="true">
      <Dimensions x="900" y="500" />
      <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" />
      <OnMoveStop>
        <!-- FarmingParty:OnWindowMoveStop(self) -->
      </OnMoveStop>
      <OnShow>
        <!-- if FarmingParty.listIsDirty["full"] then
          FarmingParty.scrollList:RefreshData()
          FarmingParty.listIsDirty["full"] = false
        end
        SetGameCameraUIMode(true) -->
      </OnShow>
      <Controls>
        <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" />
        <Button name="$(parent)CloseButton" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="CENTER">
          <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-20" offsetY="20" />
          <Dimensions x="48" y="48" />
          <Textures normal="/esoui/art/hud/radialicon_cancel_up.dds" mouseOver="/esoui/art/hud/radialicon_cancel_over.dds" />
          <OnClicked>
            FarmingPartyMemberItemsWindow:SetHidden(true)
          </OnClicked>
        </Button>
        <Label name="$(parent)Title" font="ZoFontHeader3" height="25" inheritAlpha="true" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" verticalAlignment="TOP" horizontalAlignment="CENTER" text="User's Items">
	        <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetX="-10" offsetY="5" />
        </Label>
        <Texture name="$(parent)Divider" textureFile="EsoUI/Art/Miscellaneous/centerscreen_topDivider.dds">
          <Dimensions x="900" y="4" />
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetX="-10" offsetY="47" />
        </Texture>
        <Control name="$(parent)Headers">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="10" offsetY="51" />
          <Dimensions y="32" />
          <Controls>  
            <Button name="$(parent)Farmer" mouseEnabled="true">
              <Anchor point="TOPLEFT" offsetX="32"/>
              <Dimensions x="54" y="32" />
              <Controls>
                <Label name="$(parent)Name" font="ZoFontGame" color="3689EF"  modifyTextType="NONE" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="Farmer">
                  <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
                  <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
                </Label>
              </Controls>
              <OnMouseEnter>
                <!-- FarmingParty:HeaderToolTip(self, GetString(SK_BUYER_TOOLTIP)) -->
              </OnMouseEnter>
              <OnMouseExit>
                <!-- ClearTooltip(InformationTooltip) -->
              </OnMouseExit>
            </Button>
            <Control name="$(parent)ItemName" mouseEnabled="true">
              <Anchor point="TOPLEFT" relativeTo="$(parent)Farmer" relativePoint="TOPRIGHT" offsetX="73" />
              <Dimensions x="200" y="32" />
              <Controls>
                <Label name="$(parent)Name" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL"  modifyTextType="NONE" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="Item">
                  <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
                  <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
                </Label>
              </Controls>
              <OnMouseEnter>
                <!-- FarmingParty:HeaderToolTip(self, GetString(SK_ITEM_TOOLTIP)) -->
              </OnMouseEnter>
              <OnMouseExit>
                <!-- ClearTooltip(InformationTooltip) -->
              </OnMouseExit>
            </Control>
            <Control name="$(parent)Count" inherits="ZO_SortHeader">
              <Anchor point="TOPLEFT" relativeTo="$(parent)ItemName" relativePoint="TOPRIGHT" offsetX="115" />
              <Dimensions x="120" y="32" />
              <Controls>
                <Label name="$(parent)Count" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL"  modifyTextType="NONE" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="Count">
                  <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
                  <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
                </Label>
              </Controls>
            </Control>
            <Control name="$(parent)TotalValue" inherits="ZO_SortHeader">
              <Anchor point="TOPLEFT" relativeTo="$(parent)Count" relativePoint="TOPRIGHT" offsetX="20" />
              <Dimensions x="100" y="32" />
              <Controls>
                <Label name="$(parent)TotalValue" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL"  modifyTextType="NONE" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="Total Value">
                  <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
                  <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
                </Label>
              </Controls>
            </Control>
          </Controls>
        </Control>
        <Control name="$(parent)List" inherits="ZO_ScrollList">
          <Anchor point="TOPLEFT" relativeTo="$(parent)Headers" relativePoint="BOTTOMLEFT" offsetY="1" />
          <Anchor point="BOTTOMRIGHT" offsetY="-40" offsetX="-3" />
        </Control> -->
